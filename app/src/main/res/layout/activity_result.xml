<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ResultActivity"
    android:orientation="vertical"
    android:id="@+id/resultlayout"
    android:background="@drawable/screenstyle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"></LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="@string/res"
            android:textSize="50dp"
            android:textColor="#DCDCDC"
            android:gravity="center"
            android:textStyle="italic"
            android:layout_gravity="top"
            android:background="@drawable/txtfon"
            ></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"></LinearLayout>

    <com.prush.typedtextview.TypedTextView
        android:id="@+id/resulttext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#FFD700"
        android:textStyle="bold"
        android:textSize="60sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="bottom">

        <Button
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:text="@string/home"
            android:textSize="30dp"
            android:id="@+id/home"
            android:onClick="onClick"
            android:textColor="#DCDCDC"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/startstyle"></Button>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_gravity="bottom"
            android:gravity="bottom"></LinearLayout>
    </LinearLayout>


</LinearLayout>